frr version 3.2+cl3u4
frr defaults datacenter
!
username cumulus nopassword
!
service integrated-vtysh-config
!
log syslog informational
!
{% if node[inventory_hostname]["routing"]["bgp"]["underlay"]["external"]["peers"] is defined %}
{% for interface in node[inventory_hostname]["routing"]["bgp"]["underlay"]["external"]["peers"] -%}
interface {{interface}}
 ipv6 nd ra-interval 10
 no ipv6 nd suppress-ra
!
{% endfor %}
{% endif %}
!
{% if node[inventory_hostname].routing.bgp.underlay.internal.peers != "" %}
{% for interface in node[inventory_hostname]["routing"]["bgp"]["underlay"]["internal"]["peers"] -%}
interface {{interface}}
 ipv6 nd ra-interval 10
 no ipv6 nd suppress-ra
!
{% endfor %}
{% endif %}
